--- 
import AstroIcon from '../Icons/Astro.astro'
import TailwindIcon from '../Icons/Tailwind.astro'
import JavaScriptIcon from '../Icons/JavaScript.astro'
import TypeScriptIcon from '../Icons/TypeScript.astro'

const TAGS = {
    ASTRO:{
        name: 'Astro',
        class: 'text-white bg-gradient-to-r from-pink-700 to-pink-900 font-medium rounded-full text-sm px-2 py-1.5 text-center me-2 mb-2',
        icon: AstroIcon
    },
    TAILWIND:{
        name: 'Tailwind',
        class: 'text-white bg-gradient-to-r from-sky-900 to-blue-700 font-medium rounded-full text-sm px-2 py-1.5 text-center me-2 mb-2',
        icon: TailwindIcon
    },
    JAVASCRIPT:{
        name: 'JavaScript',
        class: 'text-white bg-gradient-to-r from-amber-600 to-yellow-700 font-medium rounded-full text-sm px-2 py-1.5 text-center me-2 mb-2',
        icon: JavaScriptIcon
    },
    TYPESCRIPT:{
        name: 'TypeScript',
        class: 'text-white bg-gradient-to-r from-sky-900 to-blue-700 font-medium rounded-full text-sm px-2 py-1.5 text-center me-2 mb-2',
        icon: TypeScriptIcon
    }
}
const PROJECTS =[
    {
        title:'Lanzamientos API SpaceX',
        description:'Page that calls the SpaceX API with launches and counts them in real time',
        link: 'https://spacexlaunchesproject.netlify.app/',
        github: 'https://github.com/Abrahamvsdev/aplicacion-con-api-de-space-x',
        image: '/src/Img/space_opti.webp',
        tags: [TAGS.TAILWIND, TAGS.ASTRO, TAGS.JAVASCRIPT, TAGS.TYPESCRIPT]
    } 
]    
---

{
    PROJECTS.map(({image,title, description,tags,github ,link})=>(
        <article>
            <a href={github} ><h3 class="text-2xl font-semibold text-yellow-200 mb-2 font-style: italic">{title}</h3> </a> 
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row mb-6">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2 `}>
                        <tag.icon class="size-5" />
                        {tag.name}
                    </span>
                    </li>
                ))}
            </ul>
            <a href={link} target="_blank" rel="noopener"><img
            class="rounded-xl shadow-md shadow-white/20"
            src={image}
            alt={`captura de pantalla del proyecto${image}`}></a>
        </article>
    ))
}
